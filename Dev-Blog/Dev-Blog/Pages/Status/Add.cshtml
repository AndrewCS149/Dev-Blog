@page
@model Dev_Blog.Pages.Status.AddModel
@{
    Layout = "_Layout";
}

<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="~/css/Add.css" />
    <link rel="stylesheet" type="text/css" href="~/css/All.css" />
    <title>Status</title>
</head>
<body id="bootstrap-override">
    <main id="main">
        <div class="container pb-cmnt-container">
            <div class="row">
                <div class="panel-box col-md-6 col-md-offset-3">
                    <div class="panel panel-info">
                        <div class="panel-body">
                            <form method="post" enctype="multipart/form-data" class="form-inline">
                                <textarea asp-for="@Model.Post.Description" placeholder="Add text here..." class="pb-cmnt-textarea"></textarea>
                                <div class="form-control" id="img-upload">
                                    <input id="file" class="form-control" asp-for="@Model.Image" type="file" accept="image/*" />
                                    <label onclick="greenCheck()" for="file" asp-for="@Model.Image">
                                        @{await Html.RenderPartialAsync("_ImgUploadIcon"); }
                                        Image
                                    </label>
                                    <span id="check">&#9989;</span>
                                    <span id="cross">&#10060;</span>
                                </div>
                                <input class="form-control" asp-for="@Model.Name" placeholder="img title" />
                                <input class="form-control" asp-for="@Model.Post.UpdateNum" placeholder="update #" />
                                <button class="btn btn-secondary pull-right" type="submit">Post</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <script src="~/js/Add.js"></script>
</body>